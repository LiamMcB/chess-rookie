{
  "compilerOptions": {
    // Module system for node
    "module": "commonjs",

    // Allows for compilation of ES6 modules to commonjs
    "esModuleInterop": true,

    // Set React as the JSX factory
    "jsx": "react",

    // Target ES6 for more modern browsers
    "target": "es6",

    // Include typings from built-in lib declarations
    "lib": ["es2015", "dom", "dom.iterable"],

    // Include module source maps for debugging
    "sourceMap": true,

    // Tells ts to automatically look in node modules to resolve relative modules
    "moduleResolution": "node"
  }
}